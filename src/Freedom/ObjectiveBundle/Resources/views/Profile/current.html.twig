{% set userLogged = app.security.getToken().getUser() %}

{% extends 'FreedomObjectiveBundle::layout_profile.html.twig' %}

{% block title %}Freedom - Current{% endblock %}

{% block content_header '' %}

{% block content %}

<div ng-controller="ObjectiveCurrentCtrl" ng-init="page = 'currentObjective'">
	<div ng-repeat="objective in objectives">
    	{% include 'FreedomObjectiveBundle:ObjectiveStructure:objective_structure_severeal.html.twig' %}
	</div>
	<div ng-if="objectives.length == 0">
		<div ng-if="{{ userLogged.getId }} == {{ idProfile }}">
			<h4>No current objective. <a href="{{ path('freedom_objective_dashboard_create') }}">Create one?</a></h4>
		</div>
		<div ng-if="{{ userLogged.getId }} != {{ idProfile }}">
			<h4>{{userProfile.fullname}} has no current objective</h4>
		</div>
	</div>
</div>


{% endblock %}